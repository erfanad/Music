@model IEnumerable<MusicFall2016.Models.Album>
@{
    ViewData["Title"] = "Albums";
}
<h2>Album List</h2>
<div><a asp-action="Create" class="btn btn-warning">Add Album</a></div>
<br />
<form class="form-inline">
    <div class="form-group">
        <input type="search" name="search" />
    </div>
    <button type="submit" class="btn btn-info btn-sm">Search</button>
    @if (!string.IsNullOrEmpty(ViewBag.Search))
    {
        <a asp-action="Index" class="btn btn-sm btn-danger">Back to List</a>

    }
</form>
<br />
<table class="table">
    <thead>
        <tr class="bg-primary">
            <th>Title</th>
            <th>@Html.ActionLink("Artist", "Index", new { sort = ViewBag.ArtistSort }, new { id = "link" })</th>
            <th>@Html.ActionLink("Genre", "Index", new { sort = ViewBag.GenreSort }, new { id = "link" })</th>
            <th>@Html.ActionLink("Price", "Index", new { sort = ViewBag.PriceSort }, new { id = "link" })</th>
            <th>@Html.ActionLink("Likes", "Index", new { sort = ViewBag.LikesSort }, new { id = "link" })</th>
        </tr>
    </thead>
    @foreach (var album in Model)
    {
        <tr>
            <td>@album.Title</td>
            <td>@album.Artist.Name</td>
            <td>@album.Genre.Name</td>
            <td>@album.Price</td>
            <td>@album.Likes</td>
            <td>
                <form asp-action="Like" asp-route-id="@album.AlbumID" class="inline">
                    <button type="submit" class="btn btn-sm btn-default">Like</button>
                </form>|
                <a asp-action="Details" asp-route-id="@album.AlbumID">Details</a> |
                <a asp-action="Edit" asp-route-id="@album.AlbumID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@album.AlbumID">Delete</a>
            </td>
        </tr>
    }
</table>


